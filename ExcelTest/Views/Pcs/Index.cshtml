@model IEnumerable<ExcelTest.Models.Pc>

@{
    ViewData["Title"] = "Bilgisayar Takip Sistemi";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #6f42c1;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
            --light-bg: #f8f9fc;
        }

        body {
            background-color: var(--light-bg);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .page-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 10px 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: white;
            border-bottom: 1px solid #e3e6f0;
            padding: 1rem 1.35rem;
            font-weight: 600;
            color: #5a5c69;
            border-radius: 10px 10px 0 0 !important;
        }

        .table-container {
            overflow-x: auto;
        }

        .custom-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .custom-table th {
                background-color: #f8f9fc;
                color: #5a5c69;
                font-weight: 700;
                padding: 0.75rem;
                vertical-align: middle;
                border-bottom: 2px solid #e3e6f0;
            }

            .custom-table td {
                padding: 0.75rem;
                vertical-align: middle;
                border-bottom: 1px solid #e3e6f0;
            }

            .custom-table tr:hover {
                background-color: #f8f9fc;
            }

        .status-badge {
            padding: 0.35rem 0.5rem;
            border-radius: 0.35rem;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .btn-create {
            background: linear-gradient(to right, var(--success-color), #17a673);
            border: none;
            border-radius: 50px;
            padding: 0.6rem 1.5rem;
            font-weight: 600;
            box-shadow: 0 0.15rem 0.35rem rgba(0, 0, 0, 0.1);
        }

            .btn-create:hover {
                box-shadow: 0 0.15rem 0.5rem rgba(0, 0, 0, 0.2);
                transform: translateY(-2px);
            }

        .action-buttons .btn {
            padding: 0.25rem 0.5rem;
            border-radius: 0.35rem;
            margin-right: 0.25rem;
        }

        .search-container {
            position: relative;
        }

            .search-container input {
                border-radius: 50px;
                padding-left: 2.5rem;
            }

            .search-container i {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: #b7b9cc;
            }

        .pagination-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

            .action-buttons .btn {
                margin-right: 0;
                margin-bottom: 0.25rem;
            }

        /* Modal stilleri */
        .modal-content {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .modal-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border-bottom: none;
            border-radius: 0.5rem 0.5rem 0 0;
        }

        .modal-footer {
            border-top: 1px solid #e3e6f0;
            justify-content: center;
        }

        .btn-confirm {
            background: linear-gradient(to right, var(--success-color), #17a673);
            border: none;
            border-radius: 0.35rem;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
        }

        .btn-cancel {
            background: linear-gradient(to right, #858796, #6c757d);
            border: none;
            border-radius: 0.35rem;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Header -->
   

    <!-- Main Content -->
    <div class="container">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-list me-2"></i>Kayıtlı Bilgisayarlar</span>
                <div class="search-container">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" class="form-control" placeholder="Arama..." style="width: 250px;">
                </div>
            </div>
            <div class="card-body">
                <div class="table-container">
                    <table class="custom-table">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fas fa-laptop me-1"></i> @Html.DisplayNameFor(model => model.Bilgisayar)
                                </th>
                                <th>
                                    <i class="fas fa-exclamation-circle me-1"></i> @Html.DisplayNameFor(model => model.Sorunu)
                                </th>
                                <th>
                                    <i class="fas fa-align-left me-1"></i> @Html.DisplayNameFor(model => model.Açıklaması)
                                </th>
                                <th>
                                    <i class="fas fa-cogs me-1"></i> İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Bilgisayar)
                                    </td>
                                    <td>
                                        @{
                                            var badgeClass = "bg-warning text-dark";
                                            if (item.Sorunu.Contains("hata") || item.Sorunu.Contains("Hata"))
                                            {
                                                badgeClass = "bg-danger";
                                            }
                                            else if (item.Sorunu.Contains("tamam") || item.Sorunu.Contains("Tamam"))
                                            {
                                                badgeClass = "bg-success";
                                            }
                                        }
                                        <span class="status-badge @badgeClass">@Html.DisplayFor(modelItem => item.Sorunu)</span>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Açıklaması)
                                    </td>
                                    <td class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        <button type="button" class="btn btn-sm btn-danger delete-btn" data-id="@item.Id" data-name="@item.Bilgisayar" title="Sil">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Silme Onay Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel"><i class="fas fa-exclamation-triangle me-2"></i>Silme Onayı</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <i class="fas fa-question-circle text-warning" style="font-size: 3rem;"></i>
                    <h4 class="my-3">Silmek istediğinize emin misiniz?</h4>
                    <p><strong>"<span id="itemName"></span>"</strong> isimli bilgisayarı silmek üzeresiniz.</p>
                    <p class="text-muted">Bu işlem geri alınamaz.</p>
                </div>
                <div class="modal-footer">
                    <form id="deleteForm" method="post" asp-action="Delete">
                        <input type="hidden" id="itemId" name="id" value="" />
                        <button type="button" class="btn btn-cancel me-3" data-bs-dismiss="modal">Hayır, Vazgeç</button>
                        <button type="submit" class="btn btn-confirm">Evet, Sil</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Arama işlevselliği
        $(document).ready(function(){
            $('#searchInput').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('.custom-table tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Silme modalını açma
            $('.delete-btn').click(function() {
                var id = $(this).data('id');
                var name = $(this).data('name');

                $('#itemId').val(id);
                $('#itemName').text(name);

                var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
                deleteModal.show();
            });
        });
    </script>
</body>
</html>