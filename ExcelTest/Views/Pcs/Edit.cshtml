@model ExcelTest.Models.Pc

@{
    ViewData["Title"] = "Bilgisayar Düzenle";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #6f42c1;
            --success-color: #1cc88a;
            --light-bg: #f8f9fc;
        }

        body {
            background-color: var(--light-bg);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .page-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 10px 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: white;
            border-bottom: 1px solid #e3e6f0;
            padding: 1rem 1.35rem;
            font-weight: 600;
            color: #5a5c69;
            border-radius: 10px 10px 0 0 !important;
        }

        .form-container {
            padding: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: #5a5c69;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d3e2;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
            }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .btn-save {
            background: linear-gradient(to right, var(--success-color), #17a673);
            border: none;
            border-radius: 50px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            box-shadow: 0 0.15rem 0.35rem rgba(0, 0, 0, 0.1);
            width: 100%;
            margin-top: 1rem;
        }

        .btn-back {
            background: linear-gradient(to right, #858796, #6c757d);
            border: none;
            border-radius: 50px;
            padding: 0.6rem 1.5rem;
            font-weight: 600;
            color: white;
            text-decoration: none;
            display: inline-block;
            margin-top: 1rem;
        }

        .field-icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #b7b9cc;
            pointer-events: none;
        }

        .form-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        /* Görsel fazla boşluk problemi için padding'i küçülttük */
        .input-with-icon {
            padding-right: 1.6rem;
        }

        /* Küçük responsive iyileştirme */
        
    </style>
</head>
<body>
    <header class="page-header">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0"><i class="fas fa-laptop-code me-2"></i>Bilgisayar Takip Sistemi</h1>
            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left me-1"></i> Listeye Dön
            </a>
        </div>
    </header>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="m-0"><i class="fas fa-edit me-2"></i>Bilgisayar Düzenle</h5>
                    </div>

                    <div class="form-container">
                        <!-- asp-action bırakıldı (progressive enhancement). JS ile AJAX gönderiyoruz. -->
                        <form id="editForm" asp-action="Edit" method="post" novalidate>
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label asp-for="Bilgisayar" class="form-label"></label>
                                <input asp-for="Bilgisayar" class="form-control input-with-icon" placeholder="Bilgisayar adını giriniz" />
                                <span class="field-icon"><i class="fas fa-laptop"></i></span>
                                <span asp-validation-for="Bilgisayar" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Sorunu" class="form-label"></label>
                                <input asp-for="Sorunu" class="form-control input-with-icon" placeholder="Sorunu giriniz" />
                                <span class="field-icon"><i class="fas fa-exclamation-triangle"></i></span>
                                <span asp-validation-for="Sorunu" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Açıklaması" class="form-label"></label>
                                <textarea asp-for="Açıklaması" class="form-control" placeholder="Açıklama giriniz" rows="5"></textarea>
                                <span asp-validation-for="Açıklaması" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-save">
                                    <i class="fas fa-save me-1"></i> Güncelle
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Loading / Result Modal -->
    <div class="modal fade" id="loadingModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" id="loadingModalHeader">
                    <h5 class="modal-title"><i class="fas fa-sync-alt me-2"></i>İşlem Devam Ediyor</h5>
                </div>
                <div class="modal-body text-center" id="loadingModalBody">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <h4 class="my-3">Güncelleniyor, lütfen bekleyiniz...</h4>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(function () {
            var $form = $('#editForm');
            var $submitBtn = $form.find('button[type="submit"]');
            var loadingModalEl = document.getElementById('loadingModal');
            var loadingModal = new bootstrap.Modal(loadingModalEl);
            var indexUrl = '@Url.Action("Index", "Pcs")'; // gerekirse değiştirebilirsin

            // Inputlar blur olduğunda etraf boşluklarını temizle (kullanıcı deneyimi için)
            $form.find('input[type="text"], textarea').on('blur', function () {
                var v = $(this).val();
                $(this).val($.trim(v));
            });

            $form.on('submit', function (e) {
                e.preventDefault();

                // Eğer jQuery Validation yüklüyse, doğrula
                if (typeof $form.valid === 'function' && !$form.valid()) {
                    return;
                }

                // Gönderim öncesi tüm text/textarea'ların baş/son boşluklarını temizle (sunucuya gereksiz boşluk gitmesin)
                $form.find('input[type="text"], textarea').each(function () {
                    var v = $(this).val();
                    $(this).val($.trim(v));
                });

                // disable submit butonu
                $submitBtn.prop('disabled', true);

                // Modal: spinner içeriğini geri koy (önceki sonucu kaldırmak için)
                $('#loadingModalHeader .modal-title').html('<i class="fas fa-sync-alt me-2"></i>İşlem Devam Ediyor');
                $('#loadingModalBody').html(
                    '<div class="spinner-border" role="status"><span class="visually-hidden">Yükleniyor...</span></div>' +
                    '<h4 class="my-3">Güncelleniyor, lütfen bekleyiniz...</h4>'
                );

                loadingModal.show();

                $.ajax({
                    url: $form.attr('action'), // formun action'ını kullan (asp-action ile oluşturuluyor)
                    type: 'POST',
                    data: $form.serialize(),
                    success: function (response, textStatus, xhr) {
                        // Başarı durumunu belirlemeye çalış
                        var contentType = xhr.getResponseHeader('Content-Type') || '';
                        // Eğer JSON döndüyse, başarıyı JSON üzerinden okumaya çalış
                        if (contentType.indexOf('application/json') !== -1) {
                            var json = (typeof response === 'object') ? response : JSON.parse(response);
                            if (json && (json.success === true || json.redirect)) {
                                $('#loadingModalBody').html('<div class="p-4 text-center"><i class="fas fa-check-circle text-success fa-3x mb-3"></i><h4>Başarıyla Güncellendi</h4></div>');
                                var redirect = json.redirect || indexUrl;
                                setTimeout(function () { window.location.href = redirect; }, 1500);
                                return;
                            }
                        }

                        // Eğer HTML dönmüşse, büyük olasılıkla sunucu redirect ile Index sayfasını döndürdü veya aynı formu validation ile geri döndürdü.
                        var html = (typeof response === 'string') ? response : '';
                        // Eğer response içinde validation özetleri/hataları varsa, modal içinde göster ama formu da güncellemek daha iyidir.
                        if (html.indexOf('validation-summary') !== -1 || html.indexOf('input-validation-error') !== -1) {
                            // Sunucu validasyon hatalarını HTML olarak döndürdü; kullanıcıya göstermeyi dene
                            $('#loadingModalHeader .modal-title').html('<i class="fas fa-exclamation-triangle me-2 text-warning"></i>Doğrulama Hatası');
                            $('#loadingModalBody').html('<div class="text-start p-3"><strong>Form doğrulama hataları oluştu:</strong><div class="mt-2">' + html + '</div></div>');
                            $submitBtn.prop('disabled', false);
                            return;
                        }

                        // Eğer HTML ancak içinde Index sayfası/başarı izleri varsa (redirect sonucu), başarı say
                        // Bunun garantisi yok; güvenli davranıp kullanıcıyı listeye yönlendiriyoruz.
                        $('#loadingModalBody').html('<div class="p-4 text-center"><i class="fas fa-check-circle text-success fa-3x mb-3"></i><h4>Başarıyla Güncellendi</h4></div>');
                        setTimeout(function () { window.location.href = indexUrl; }, 1200);
                    },
                    error: function (xhr) {
                        // Hata durumunda server'ın döndürdüğü mesajı almaya çalış
                        var msg = 'Sunucuyla iletişimde bir hata oluştu. Lütfen tekrar deneyiniz.';
                        try {
                            var json = JSON.parse(xhr.responseText);
                            if (json && json.message) msg = json.message;
                        } catch (e) {
                            // responseText html veya başka bir şey olabilir; kısa bir özet ekleyelim
                            if (xhr.responseText && xhr.responseText.length < 1000) {
                                msg = xhr.responseText;
                            }
                        }

                        $('#loadingModalHeader .modal-title').html('<i class="fas fa-times-circle me-2 text-danger"></i>Hata');
                        $('#loadingModalBody').html(
                            '<div class="p-3 text-center">' +
                            '<h5 class="text-danger mb-3">Bir hata oluştu</h5>' +
                            '<p class="small text-break">' + $('<div/>').text(msg).html() + '</p>' +
                            '<button type="button" id="modalCloseBtn" class="btn btn-secondary mt-2">Kapat</button>' +
                            '</div>'
                        );

                        // Kapat butonu
                        $('#modalCloseBtn').on('click', function () {
                            loadingModal.hide();
                        });

                        $submitBtn.prop('disabled', false);
                    }
                });

            });
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
